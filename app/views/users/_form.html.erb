<%= form_for(@user) do |f| %>

<div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
</div>

<div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
</div>

<div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age %>
</div>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>

